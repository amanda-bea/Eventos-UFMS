<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="550.0" style="-fx-background-color: #f0f0f0;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ufms.eventos.ui.DefinirFormularioFXMLController">
    <top>
        <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #489ec1; -fx-padding: 15;">
            <Label fx:id="lblTituloEvento" text="Definir Formulário para o Evento: [Nome do Evento]" textFill="white">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #ffffff;">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #ffffff;">
                    <padding>
                        <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
                    </padding>

                    <Label text="Campos Padrão para Inscrição (Aplicável a todas as ações deste evento)" textFill="#2f4a51" wrapText="true" textAlignment="CENTER" maxWidth="430.0">
                        <font>
                            <Font name="System Bold" size="15.0"/>
                        </font>
                         <VBox.margin>
                            <Insets bottom="5.0"/>
                        </VBox.margin>
                    </Label>
                    <VBox spacing="10.0"
                          style="-fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 15px; -fx-background-color: #f9f9f9;"
                          maxWidth="450.0">
                        <CheckBox fx:id="chkUsarNome" text="Nome Completo do Participante" selected="true">
                            <font>
                                <Font name="Nirmala UI" size="13.0"/>
                            </font>
                        </CheckBox>
                        <CheckBox fx:id="chkUsarEmail" text="Email de Contato" selected="true">
                            <font>
                                <Font name="Nirmala UI" size="13.0"/>
                            </font>
                        </CheckBox>
                        <CheckBox fx:id="chkUsarCpf" text="CPF">
                            <font>
                                <Font name="Nirmala UI" size="13.0"/>
                            </font>
                        </CheckBox>
                        <CheckBox fx:id="chkUsarCurso" text="Curso/Instituição">
                            <font>
                                <Font name="Nirmala UI" size="13.0"/>
                            </font>
                        </CheckBox>
                    </VBox>

                    <Separator prefWidth="200.0">
                        <VBox.margin>
                            <Insets top="10.0" bottom="5.0"/>
                        </VBox.margin>
                    </Separator>

                    <Label text="Campos Personalizados Adicionais (Aplicável a todas as ações)" textFill="#2f4a51" wrapText="true" textAlignment="CENTER" maxWidth="430.0">
                        <font>
                            <Font name="System Bold" size="15.0"/>
                        </font>
                         <VBox.margin>
                            <Insets bottom="5.0"/>
                        </VBox.margin>
                    </Label>
                    <VBox fx:id="camposPersonalizadosContainer" spacing="10.0" alignment="TOP_LEFT" maxWidth="450.0"/>

                    <Button fx:id="btnAdicionarCampoPersonalizado" text="+ Adicionar Campo Personalizado"
                            onAction="#handleAdicionarCampoPersonalizado"
                            style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <VBox.margin>
                            <Insets top="5.0" bottom="20.0"/>
                        </VBox.margin>
                    </Button>

                    <HBox alignment="CENTER_RIGHT" spacing="15.0" maxWidth="450.0">
                        <Button fx:id="btnCancelar" text="Cancelar Definição" onAction="#handleCancelar"
                                style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                                prefWidth="180.0"/>
                        <Button fx:id="btnFinalizarFormulario" text="Salvar Configuração do Formulário"
                                onAction="#handleFinalizarFormulario"
                                style="-fx-background-color: #489ec1; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                                prefWidth="280.0"/>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>